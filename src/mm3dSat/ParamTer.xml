<ParamMICMAC>
  <DicoLoc>
    <Symb> PatternIm=XXXX</Symb>

    <Symb> Masq=XXXX  </Symb>

    <Symb> Dir=MEC/</Symb>  <!-- XXXX -->
    <Symb> Pyr=Pyram/</Symb> <!-- XXXX -->

    <Symb> Inc</Symb>
    <Symb> AltMoy</Symb>
    <Symb> ResolTer</Symb>

    <Symb> SzW=2</Symb>

    <Symb> PasInit=1</Symb>
    <Symb> PasFin=0.5</Symb>
    <Symb> RegulInit=0.3</Symb>
    <Symb> RegulFin=0.3</Symb>

    <Symb> DilatAlti=4</Symb>
    <Symb> DilatPlani=3</Symb>

    <Symb> Xmin=0.0</Symb>
    <Symb> Ymin=0.0</Symb>
    <Symb> Xmax=1000.0</Symb>
    <Symb> Ymax=1000.0</Symb>

    <Symb> CalcMEC=false </Symb>

  </DicoLoc>

  <Section_Terrain>
    <IntervAltimetrie>
      <ZIncCalc>${Inc}</ZIncCalc>
      <ZMoyen>${AltMoy}</ZMoyen>
<!--
      <MNT_Init>
        <MNT_Init_Image>MNT_init.tif</MNT_Init_Image>
        <MNT_Init_Xml>MNT_init.xml</MNT_Init_Xml>
      </MNT_Init>
-->
    </IntervAltimetrie>
    </IntervAltimetrie>
    <Planimetrie>
      <#WHEN VTEST=${UseResol}>
        <ResolutionTerrain>${ResolTer}</ResolutionTerrain>
      </#WHEN>
       <#WHEN VTEST=${UseMasq}>
            <MasqueTerrain>
                <MT_Image> ${Masq}.tif </MT_Image>
                <MT_Xml>   ${Masq}.xml </MT_Xml>
            </MasqueTerrain>
        </#WHEN>
      <#WHEN VTEST=${UseBoxTer}>
        <BoxTerrain> ${Xmin} ${Ymin} ${Xmax} ${Ymax}  </BoxTerrain>
      </#WHEN>
    </Planimetrie>
  </Section_Terrain>
  <Section_PriseDeVue>
    <GeomImages>eGeomImageGrille</GeomImages>
    <Images>
      <ImPat>${PatternIm}</ImPat>
    </Images>
    <NomsGeometrieImage>
       <PatternSel>(.*)\.tif</PatternSel>
      <PatNameGeom>$1.GRI</PatNameGeom>
    </NomsGeometrieImage>
  </Section_PriseDeVue>
  <Section_MEC>
    <ClipMecIsProp > false </ClipMecIsProp>
    <EtapeMEC>
      <DeZoom>-1</DeZoom>
      <DynamiqueCorrel>eCoeffAngle</DynamiqueCorrel>
      <AggregCorr>eAggregSymetrique</AggregCorr>
      <ModeInterpolation>eInterpolBiLin</ModeInterpolation>
      <SzW>2.0</SzW>
      <AlgoRegul>eAlgo2PrgDyn</AlgoRegul>
      <ModulationProgDyn Portee="Globale">
        <EtapeProgDyn>
          <ModeAgreg>ePrgDAgrSomme</ModeAgreg>
          <NbDir>8</NbDir>
        </EtapeProgDyn>
      </ModulationProgDyn>

      <ZRegul>${RegulInit}</ZRegul>
      <ZPas>${PasInit}</ZPas>
      <ZDilatAlti>${DilatAlti}</ZDilatAlti>
      <ZDilatPlani>${DilatPlani}</ZDilatPlani>

      <GenImagesCorrel>true</GenImagesCorrel>
    </EtapeMEC>
    <EtapeMEC>
      <DeZoom>32</DeZoom>
    </EtapeMEC>
    <EtapeMEC>
      <DeZoom>16</DeZoom>
    </EtapeMEC>
    <EtapeMEC>
      <DeZoom>8</DeZoom>
    </EtapeMEC>
    <EtapeMEC>
      <DeZoom>4</DeZoom>
      <ZRegul>0.2</ZRegul>
    </EtapeMEC>
    <EtapeMEC>
      <DeZoom>2</DeZoom>
      <ZRegul>0.1</ZRegul>
    </EtapeMEC>
    <EtapeMEC>
      <DeZoom>1</DeZoom>
      <ZPas>${PasFin}</ZPas>
      <ZRegul>${RegulFin}</ZRegul>
    </EtapeMEC>
    <EtapeMEC>
      <AlgoRegul> eAlgoDequant </AlgoRegul>
      <!--The dequantification algorithm, specified by eAlgoDequant, is a post-processing
       phase that fixes the quantification artifacts -->
       <DeZoom > 1 </DeZoom>
       <ZPas> 1 </ZPas> <!-- 1 if eAlgoDequant, the notion of step has no meaning for a floating point result-->
    </EtapeMEC>
  </Section_MEC>
  <Section_Results>
    <GeomMNT>eGeomMNTEuclid</GeomMNT>
    <#WHEN VTEST=${CalcMEC}>
      <DoMEC> true  </DoMEC>
    </#WHEN>
  </Section_Results>
  <Section_WorkSpace>
      <WorkDir >  ThisDir </WorkDir>
      <TmpMEC>    ${Dir} </TmpMEC>
      <TmpResult> ${Dir} </TmpResult>
      <TmpPyr>  ${Pyr}  </TmpPyr>
      <NbCelluleMax> 8e7 </NbCelluleMax>
      <SzRecouvrtDalles> 50 </SzRecouvrtDalles>
      <SzDalleMin> 500 </SzDalleMin>
      <DefTileFile>100000</DefTileFile>
      <ByProcess>${MMNbProc}</ByProcess>
  </Section_WorkSpace>
  <Section_Vrac />
</ParamMICMAC>
