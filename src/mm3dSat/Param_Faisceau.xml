<ParamMICMAC>
  <DicoLoc>
         <Symb> Dir=MEC_faisceauXXXX/</Symb>
         <Symb> Pyr=Pyram/</Symb>
  </DicoLoc>

<!-- *************************************************************
         Parametres lies au terrain "physique"
         independamment de la prise de vue
-->
  <Section_Terrain>
    <IntervAltimetrie>
      <ZIncCalc>1000.000000</ZIncCalc>
      <ZMoyen>1500.000000</ZMoyen>
    </IntervAltimetrie>
    <Planimetrie>
<!--  <ResolutionTerrain>0.578764</ResolutionTerrain> -->
      <BoxTerrain> 10000 13000 12000 15000  </BoxTerrain>
    </Planimetrie>
  </Section_Terrain>

<!--  *************************************************************
         Parametres lies a la prise de vue, independamment de son
         exploitation par le correlateur
-->
  <Section_PriseDeVue>
    <GeomImages>eGeomImageGrille</GeomImages>
    <Images>
      <Im1>IMG_R1C1_001.tif</Im1>
      <ImPat>(IMG_R1C1_002.tif|IMG_R1C1_003.tif)</ImPat>
    </Images>
    <NomsGeometrieImage>
       <PatternSel>(.*)\.tif</PatternSel>
      <PatNameGeom>$1.GRI</PatNameGeom>
    </NomsGeometrieImage>
  </Section_PriseDeVue>

<!--  *************************************************************
          Parametres reglant le comportement de l'algo de mise en
          correspondance

          La premiere etape doit obligatoirement avoir le champs
          resolution a -1. Elle donne les valeurs par defaut et ne
          sera pas executee.
--->
  <Section_MEC>
<!--
    <ProportionClipMEC >  9780 16300 16500 12900 </ProportionClipMEC>
    <ClipMecIsProp > false </ClipMecIsProp>
-->
    <EtapeMEC>
      <DeZoom>-1</DeZoom>
      <DynamiqueCorrel>eCoeffAngle</DynamiqueCorrel>
      <AggregCorr>eAggregSymetrique</AggregCorr>
      <ModeInterpolation>eInterpolBiLin</ModeInterpolation>
      <SzW>2.0</SzW>
      <AlgoRegul>eAlgo2PrgDyn</AlgoRegul>
      <ModulationProgDyn Portee="Globale">
        <EtapeProgDyn>
          <ModeAgreg>ePrgDAgrSomme</ModeAgreg>
          <NbDir>8</NbDir>
        </EtapeProgDyn>
      </ModulationProgDyn>

      <ZRegul>0.300000</ZRegul>
      <ZPas>1</ZPas>
      <ZDilatAlti>4</ZDilatAlti>
      <ZDilatPlani>3</ZDilatPlani>

      <GenImagesCorrel>true</GenImagesCorrel>
    </EtapeMEC>
    <EtapeMEC>
      <DeZoom>32</DeZoom>
    </EtapeMEC>
    <EtapeMEC>
      <DeZoom>16</DeZoom>
    </EtapeMEC>
    <EtapeMEC>
      <DeZoom>8</DeZoom>
    </EtapeMEC>
    <EtapeMEC>
      <DeZoom>4</DeZoom>
      <ZRegul>0.200000</ZRegul>
    </EtapeMEC>
    <EtapeMEC>
      <DeZoom>2</DeZoom>
      <ZRegul>0.0500000</ZRegul>
    </EtapeMEC>
    <EtapeMEC>
      <DeZoom>1</DeZoom>
      <ZPas>0.5</ZPas>
      <ZRegul>0.010000</ZRegul>
    </EtapeMEC>
    <EtapeMEC>
      <AlgoRegul> eAlgoDequant </AlgoRegul>
      <!--The dequantification algorithm, specified by eAlgoDequant, is a post-processing
       phase that fixes the quantification artifacts -->
       <DeZoom > 1 </DeZoom>
       <ZPas> 1 </ZPas> <!-- 1 if eAlgoDequant, the notion of step has no meaning for a floating point result-->
    </EtapeMEC>
  </Section_MEC>

<!--  *************************************************************
       Parametres fixant les resultats devant etre produits par l'algo
-->
  <Section_Results>
    <GeomMNT>eGeomMNTFaisceauIm1ZTerrain_Px1D</GeomMNT>
  </Section_Results>

<!--  *************************************************************
     Parametres lies a l'execution du calcul du "chantier" sur la machine
-->
  <Section_WorkSpace>
      <WorkDir >  ThisDir </WorkDir>
      <TmpMEC>    ${Dir} </TmpMEC>
      <TmpResult> ${Dir} </TmpResult>
      <TmpPyr>  ${Pyr}  </TmpPyr>
      <NomChantier>karaxingar</NomChantier>
      <NbCelluleMax> 8e7 </NbCelluleMax>
      <SzRecouvrtDalles> 50 </SzRecouvrtDalles>
      <SzDalleMin> 500 </SzDalleMin>
      <DefTileFile>100000</DefTileFile>
      <ByProcess>${MMNbProc}</ByProcess>
  </Section_WorkSpace>
  <Section_Vrac />
</ParamMICMAC>
